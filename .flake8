[flake8]
max-line-length = 120

extend-ignore = 
    E203, # black
    E266, # too many leading '#' for block comment
    E302, # expected 2 blank lines, found 1
    B006, # do not use mutable data structures for argument defaults (too many false positives)
    # TODO: to be fixed:
    W605, # invalid escape sequence, necessary for sphinx directives in docstrings but should switch to raw string
    E501, # line length, exceeded by some docstrings

select =
    # built-in checks
  # C901, # mccabe
    E,    # pycodestyle errors
    W,    # pycodestyle warnings
    F,    # pyflakes
    # plugins
    A00,  # flake8-builtins
    B,    # bugbear
  # C4,   # flake8-comprehensions
  # D,    # pydocstyle
  # RST,  # flake8-rst-docstrings
  # N400, # flake8-broken-line

# flake8-docstrings
docstring-convention = numpy

# flake8-rst-docstrings
rst-roles =
    class,
    func,
    ref,
    meth,

# mccabe complexity
# max-complexity = 10

# ignored files/directories
exclude =
    # No need to traverse the git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    doc/conf.py,
    # No need for init and setup files
    *__init__.py
    *setup.py
